<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Description</th>
            {{#role.dispatch}}
                <th>Assigned</th>
            {{/role.dispatch}}
            {{#role.order}}
                <th>Assigned</th>
            {{/role.order}}
            <th>POD</th>
            <th>Company</th>
        </tr>
        {{#orders}}
            <tr>
                <td><a href="/order/orderinfo/{{id}}"><button>{{id}}</button></a></td>
                <td>{{status}}</td>
                <td>{{description}}</td>
                {{#role.dispatch}}
                    <td>{{user.alias}}</td>
                {{/role.dispatch}}
                {{#role.order}}
                    <td>{{user.alias}}</td>
                {{/role.order}}
                <td>{{pod}}</td>
                <td>{{company.name}}</td>

            </tr>
        {{/orders}}
    </table>
    {{^orders}}
        <p>No Orders</p>
    {{/orders}}
</div>